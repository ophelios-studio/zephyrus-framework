# ----------------------------- ERROR HANDLING ------------------------------ #
<IfModule mod_php.c>
    php_flag html_errors on
    php_flag log_errors on
    php_flag ignore_repeated_errors on
    php_flag ignore_repeated_source on
    php_flag report_memleaks on
    php_flag track_errors on
    php_value docref_root 0
    php_value docref_ext 0
    php_value error_reporting -1
    php_value log_errors_max_len 0
    php_value xdebug.start_with_request no
</IfModule>

<IfModule !mod_php.c>
    SetEnv PHP_FLAG "html_errors=on"
    SetEnv PHP_FLAG "log_errors=on"
    SetEnv PHP_FLAG "ignore_repeated_errors=on"
    SetEnv PHP_FLAG "ignore_repeated_source=on"
    SetEnv PHP_FLAG "report_memleaks=on"
    SetEnv PHP_FLAG "track_errors=on"
    SetEnv PHP_VALUE "docref_root=0"
    SetEnv PHP_VALUE "docref_ext=0"
    SetEnv PHP_VALUE "error_reporting=-1"
    SetEnv PHP_VALUE "log_errors_max_len=0"
    SetEnv PHP_VALUE "xdebug.start_with_request=no"
</IfModule>

# --------------------------- LANGUAGE & CHARSET ---------------------------- #
AddDefaultCharset UTF-8
DefaultLanguage fr-CA

# --------------------------- SECURITY SETTINGS ----------------------------- #
# Maximum allowed upload size
<IfModule mod_php.c>
    php_value post_max_size 500M
    php_value upload_max_filesize 500M
</IfModule>

<IfModule !mod_php.c>
    SetEnv PHP_VALUE "post_max_size=500M"
    SetEnv PHP_VALUE "upload_max_filesize=500M"
</IfModule>

# Limit HTTP request body according to the maximum allowed upload
# size (200M in bytes).
LimitRequestBody 509715200

# Time limit (in seconds) for script execution
<IfModule mod_php.c>
    php_value max_execution_time 300
    php_value memory_limit 500M
</IfModule>

<IfModule !mod_php.c>
    SetEnv PHP_VALUE "max_execution_time=300"
    SetEnv PHP_VALUE "memory_limit=500M"
</IfModule>

# Time limit (in seconds) to parse input data (GET, POST, ...)
<IfModule mod_php.c>
    php_value max_input_time 180
</IfModule>

<IfModule !mod_php.c>
    SetEnv PHP_VALUE "max_input_time=180"
</IfModule>

# Disable directory browsing and server exposition
Options All -Indexes
ServerSignature Off
<IfModule mod_php.c>
    php_flag expose_php Off
</IfModule>

<IfModule !mod_php.c>
    SetEnv PHP_FLAG "expose_php=Off"
</IfModule>

# Transmit session id only with cookie and prevent theft from client
# scripts (XSS).
<IfModule mod_php.c>
    php_flag session.use_cookies On
    php_flag session.use_only_cookies On
    php_flag session.cookie_httponly On
    php_flag session.use_trans_sid Off
</IfModule>

<IfModule !mod_php.c>
    SetEnv PHP_FLAG "session.use_cookies=On"
    SetEnv PHP_FLAG "session.use_only_cookies=On"
    SetEnv PHP_FLAG "session.cookie_httponly=On"
    SetEnv PHP_FLAG "session.use_trans_sid=Off"
</IfModule>

# Prevent RFI attacks (remote file inclusion)
<IfModule mod_php.c>
    php_flag allow_url_fopen Off
    php_flag allow_url_include Off
</IfModule>

<IfModule !mod_php.c>
    SetEnv PHP_FLAG "allow_url_fopen=Off"
    SetEnv PHP_FLAG "allow_url_include=Off"
</IfModule>

# Protect error logs, htaccess file and configurations
<Files .htaccess,config.ini>
    order allow,deny
    deny from all
    satisfy all
</Files>